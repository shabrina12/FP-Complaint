@model Client.ViewModels.ComplaintVM
@{
    ViewData["Title"] = "Order";
}

<!-- Add Complaint Modal -->
<div class="modal fade" id="addComplaintModal" tabindex="-1" aria-labelledby="addComplaintModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addComplaintModalLabel">Add Complaint</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddComplaint" asp-controller="Complaint">
                    <div class="mb-3">
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" rows="5" style="height: 150px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="OrderId" class="form-control" type="hidden" id="orderIdInput" />
                        <span asp-validation-for="OrderId " class="text-danger"></span>
                    </div>
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary btn-fill" value="AddComplaint">Submit Complaint</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <button type="button" class="btn btn-primary btn-fill mb-3" onclick="addOrder()"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add Order</button>
    <table id="table" class="table display">
        <thead>
            <tr>
                <th>No</th>
                <th>ID</th>
                <th>Order date</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script>
        $("li#nav-order").addClass("active")
    </script>
    <script src="~/js/order.js"></script>
}