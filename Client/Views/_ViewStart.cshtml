@{
    if (User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.IsInRole("staff")))
    {
        Layout = "_AdminLayout";
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("user"))
    {
        Layout = "_UserLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}
