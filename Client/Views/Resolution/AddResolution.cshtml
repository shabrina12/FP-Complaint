@model Client.ViewModels.ResolutionVM

@{
    ViewData["Title"] = "Resolution";
}

<main class="d-flex">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 class="h2">Resolution Form</h1>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <form asp-action="AddResolution">
                                <div class="mb-3">
                                    <label for="editEmployeeId" class="form-label">Employee ID</label>
                                    <input asp-for="EmployeeId" class="form-control" type="text" id="editEmployeeId" required />
                                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="editComplaintId" class="form-label">Complaint ID</label>
                                    <input asp-for="ComplaintId" class="form-control" type="text" id="editComplaintId" required />
                                    <span asp-validation-for="ComplaintId" class="text-danger"></span>
                                </div>
                                <div class="text-center mt-3">
                                    <button type="submit" class="btn btn-lg btn-primary" value="AddResolution">Submit Resolution</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}