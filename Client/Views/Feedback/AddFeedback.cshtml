@model Client.ViewModels.FeedbackVM

@{
    ViewData["Title"] = "Feedback";
}

<main class="d-flex">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

            <div class="text-center mt-4">
                <h1 class="h2">Feedback Form</h1>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="AddFeedback">
                        <div class="mb-3">
                            <label for="editResolutionId" class="form-label">Resolution ID</label>
                            <input asp-for="ResolutionId" class="form-control" type="text" id="editResolutionId" required />
                            <span asp-validation-for="ResolutionId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="editDescription" class="form-label">Description</label>
                            <textarea asp-for="Description" rows="10" cols="70" id="editDescription" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
						<div class="mb-3">
                            <label for="editRating" class="form-label">Rating</label>
                            <select class="form-select" aria-label="status" id="editRating" required>
                                <option hidden>Rating</option>
                                <option value="1">1 star</option>
                                <option value="2">2 stars</option>
                                <option value="3">3 stars</option>
                                <option value="4">4 stars</option>
                                <option value="5">5 stars</option>
                            </select>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-lg btn-primary" value="AddFeedback">Submit Feedback</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}